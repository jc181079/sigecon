{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios list</h1>

    <table>
        <thead>
            <tr>
                <th>Login</th>
                <th>Clave</th>
                <th>Idusuarios</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuarios_show', { 'idusuarios': usuario.idusuarios }) }}">{{ usuario.login }}</a></td>
                <td>{{ usuario.clave }}</td>
                <td>{{ usuario.idusuarios }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuarios_show', { 'idusuarios': usuario.idusuarios }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('usuarios_edit', { 'idusuarios': usuario.idusuarios }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuarios_new') }}">Create a new usuario</a>
        </li>
    </ul>
{% endblock %}
