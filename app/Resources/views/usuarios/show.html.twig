{% extends 'base.html.twig' %}

{% block body %}
   <div class="container">
        <div class="jumbotron">
                <div class="container">
                    <h1><strong>.:Consulta de funcionario </strong></h1>
                    <p>Visualizacion de los datos de los funcionarios registrados en el sistema</p> 
                    <p>solo podran tener acceso a modificar la informacion los usuarios con las permisologias adecuadas</p>                   
                </div>
        </div>
    <table class="table table-bordered table-responsive">
        <tbody>
            <tr>
                <th>Login</th>
                <td>{{ usuario.login }}</td>
            </tr>
            <tr>
                <th>Clave</th>
                <td>{{ usuario.clave }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default" href="{{ path('usuarios_index') }}">Volver</a>
        </li>
        <li>
            <a class="btn btn-primary" href="{{ path('usuarios_edit', { 'idusuarios': usuario.idusuarios }) }}">Modificar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar registro">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
