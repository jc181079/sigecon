{% extends 'base.html.twig' %}

{% block body %}
    <h1>Perfil</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombreper</th>
                <td>{{ perfil.nombreper }}</td>
            </tr>
            <tr>
                <th>Idperfil</th>
                <td>{{ perfil.idperfil }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('perfil_index') }}">Back to the list</a>
