{% extends "::base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 center-block">
                    <div class="well bs-component">                         
                        <form class="form-signin" method="post" action="{{ path('cambiaclave') }}" >
                            <h2 class="form-signin-heading">
                                <span class="oi oi-account-login" title="icon name" aria-hidden="true"></span> 
                                ::Cambio de Clave de Seguridad::
                            </h2>                                
                            <label  class="sr-only">Login</label>
                            <label for="inputPassword">Usuario: {{usu}}</label>
                            <input type="password" id="clave" name="claveactual" class="form-control" placeholder="Password"  >
                            <input type="password" id="clave" name="clavenueva1" class="form-control" placeholder="Password"  >
                            <input type="password" id="clave" name="clavenueva2" class="form-control" placeholder="Password"  >
                            <div class="invalid-form-error-message"></div>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Cambiar</button>
                            <a class="btn btn-lg btn-danger btn-block" href="{{path('principal')}}" >Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
