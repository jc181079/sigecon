{% extends "::base.html.twig" %}
{% block body %}
{% for flashMessage in app.session.flashbag.get('msgW') %}
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-warning-sign" ></span> 
                {{flashMessage}}
            </div>

        {% endfor%}
        {% for flashMessage in app.session.flashbag.get('msgS') %}
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-warning-sign" ></span> 
                {{flashMessage}}...
            </div>
        {% endfor%}
<div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 center-block">
                    <div class="well bs-component">
                        <form class="form-signin" method="post" action="{{ path('seguridad') }}" >
                            <h2 class="form-signin-heading">::Seguridad::</h2>
                            <label  class="sr-only">Login</label>
                            <input  id="login" name="login" class="form-control" placeholder="Login"   >
                            <label for="inputPassword" class="sr-only">Clave</label>
                            <input type="password" id="clave" name="clave" class="form-control" placeholder="Password"  >

                            <div class="invalid-form-error-message"></div>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
</div>
{% endblock %}
